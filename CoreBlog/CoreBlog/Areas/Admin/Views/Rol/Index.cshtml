@using EntityLayer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2></h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Admin/Rol/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Rol/UpdateRole/@item.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/Rol/AddRole/" class="btn btn-primary">Yeni Rol Ekle</a>
<a href="/Admin/Rol/UserRoleList/" class="btn btn-outline-info">Kullanıcı Rol Listesi</a>
<br />
