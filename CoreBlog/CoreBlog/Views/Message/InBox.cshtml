@using EntityLayer.Concrete
@model List<OtherMessage>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<h1>Gelen Kutusu</h1>
<table class="table mdi-table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageID</td>
            <td>@item.Subject</td>
            <td>@*@item.SenderUser.WriterName*@</td>
            <td>@item.MessageDate.ToShortDateString()</td>
            <td>
                <a href="/Blog/EditBlog/@item.MessageID" class="btn btn-info">Mesajı Aç</a>
            </td>
        </tr>
    }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-info">Yeni Blog Oluştur</a>

