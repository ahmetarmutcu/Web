
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Giriş Yap</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Mail Adresi</label>
                        <input type="email" class="form-control" id="WriterMail" name="WriterMail" aria-describedby="emailHelp" placeholder="" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="password" class="form-control" id="WriterPassword" name="WriterPassword" placeholder="" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Tekrar şifre</label>
                        <input type="password" class="form-control" id="WriterOtherPassword" name="WriterOtherPassword" placeholder="" required="">
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Beni hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">GİRİŞ</button>
                    <p><a href="/Register/Index/"> Bir hesabın yok mu?</a></p>
                    @if (ViewBag.message != null)
                    {
                        <p>@ViewBag.message</p>
                    }

                </form>
            </div>
        </div>
    </div>
</section>

